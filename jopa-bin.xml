<?xml version="1.0"?>
<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <includes>
                <!-- Modules to include in assembly -->
                <include>jopa:api</include>
                <include>jopa:impl</include>
                <include>jopa:owl2java</include>
                <include>jopa:owlapi-utils</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <outputFileNameMapping>jopa-${artifactId}.${extension}</outputFileNameMapping>
                 <dependencySets>
                    <dependencySet>
                        <outputDirectory>/</outputDirectory>
                        <includes>
                            <include>commons-lang:commons-lang</include>
                            <include>antlr-runtime:antlr-runtime</include>
                        </includes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>